<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjsu.priteshchandaliya.rentme">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InputScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactInfo"
            android:label="@string/title_activity_contact_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayFragment"
            android:label="@string/title_activity_display_fragment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>